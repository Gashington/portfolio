@import '/mixin/mixins'
@import '/mixin/sprite'

.social-list
  padding 6px 0 0 0
  .social-item
    float left
    margin 0 0 0 24px
    a
      color #58697a
      font-size 47px
      text-decoration none
      &:hover
        color #3ba8c0

.main-nav
  border-radius 4px
  background #eff3f7
  overflow hidden
  li
    margin -2px 0 0 0
    padding 0 10px
    a
      display block
      padding 25px 0 22px
      border-top 2px solid #3ba8c0
      color #959aa8
      font-size 21px
      text-decoration none
      text-indent 17px
      &:hover
        color #3ba8c0
    &.active
      background #3ba8c0
      a
        color #fff

.w-contact
  border-radius 4px
  .w-contact-item
    padding 0 0 0 41px
    a
      position relative
      display block
      padding 0 10px 0 41px
      color #fff
      font-size 17px
      text-decoration none

      .icon
        position absolute
        &.icon-mail
          top 11px
          left 0
          font-size 16px
        &.icon-phone
          top 7px
          left 0
          font-size 21px
        &.icon-skype
          top 10px
          left 3px
          font-size 20px
      &:hover
        span
          text-decoration underline
  .w-contact-title
    margin 0
    padding 0 0 0 18px
    color #fff
    font-size 21px
    font-weight normal
    line-height 40px
  .lg-blue
    height 40px
    background #3ba8c0
    line-height 40px
  .h-blue
    height 42px
    background #41b9d4
    line-height 39px
  .m-blue
    height 42px
    background #48cbe8
    line-height 39px
  .s-blue
    height 39px
    background #51daf8
    line-height 37px